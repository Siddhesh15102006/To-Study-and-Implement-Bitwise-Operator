#include <iostream>
using namespace std;

int main() 
{
  int number;
    cout << "Enter A Number";
    cin >> number;

     if (number % 2 == 0) 
    {
      cout << number << " The Number is Even :- " <<endl;
    } 

    else 
    {
      cout << number << " The Number is Odd :- " <<endl;
    }
    return 0;
}


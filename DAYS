// TIME TABLE OF SUBJECTS FOR SCHOOL.
#include <iostream>
using namespace std;
int main() 
{
    int choice;
    cout<<"1. MONDAY"<<endl<<"2. TUESDAY"<<endl<<"3. WEDNESDAY"<<endl<<"4. THURSDAY"<<endl<<"5. FRIDAY"<<endl<<"6. SATURDAY"<<endl<<"7. SUNDAY"<<endl;
    
    cout << "Enter Any Day";
    cin>>choice;
    
    switch (choice)
    {
    case 1:
    cout<<"MATHS";
    break;
    case 2:
    cout<<"SCIENCE";
    break;
    case 3:
    cout<<"ENGLISH";
    break;
    case 4:
    cout<<"HINDI";
    break;
    case 5:
    cout<<"HISTORY";
    break;
    case 6:
    cout<<"GEOGRAPHY";
    break;
    case 7:
    cout<<"GAMES";
    break;
}
return 0;
}   

/* Output :-
1. MONDAY
2. TUESDAY
3. WEDNESDAY
4. THURSDAY
5. FRIDAY
6. SATURDAY
7. SUNDAY
Enter Any Day7
GAMES

=== Code Execution Successful ===
*/    
    
    
    
    
    
    
    
    
    
